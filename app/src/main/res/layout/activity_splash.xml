<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.libre.ui.WelcomeActivity"
    android:background="@color/black">


    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="215dp"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <!-- android:layout_width="215dp"
        android:layout_marginTop="40dp"
            android:layout_height="68dp"-->
        <ImageView
           android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="25dp"
            android:background="@drawable/ic_app_splashsceen_logo"
            android:layout_marginTop="65dp"

            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/loader"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_centerInParent="true" />

<!--    <com.github.jlmd.animatedcircleloadingview.AnimatedCircleLoadingView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_loading_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:layout_centerInParent="true"
        app:mainColor="@color/brand_orange"
        app:secondaryColor="@color/purple" />-->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/splashscreen_maintext"
        android:textStyle="bold"
        android:layout_below="@+id/loader"
        android:textSize="35sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView3" />


    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/app_name"
            android:visibility="gone"
            android:textColor="@color/white"
            android:padding="40dp"
            android:background="@color/brand_orange"
            android:layout_marginBottom="20dp"
            android:textSize="22sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/powered_text"
            android:textColor="@color/white"
            android:padding="10dp"
            android:background="@color/brand_orange"
            android:layout_marginBottom="40dp" />


    </LinearLayout>

    <ImageView
        android:src="@mipmap/amazon_alexa_badge"
        android:layout_below="@+id/mAppVersion"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/app_version"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/mAppVersion"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
